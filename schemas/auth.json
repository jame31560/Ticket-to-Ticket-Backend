{
    "login": {
        "type": "object",
        "properties": {
            "username": {
                "type": "string",
                "minLength": 4,
                "maxLength": 20
            },
            "password": {
                "type": "string",
                "minLength": 8
            }
        },
        "required": [
            "username",
            "password"
        ]
    },
    "verify": {
        "type": "object",
        "properties": {
            "token": {
                "type": "string"
            }
        },
        "required": [
            "token"
        ]
    }
}